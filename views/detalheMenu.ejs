<!DOCTYPE html>
<html>
  <head>
    <title>Pimenta & Sal</title>
    <link rel="stylesheet" href="/css/style.css" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body>
    <!-- Navbar (sit on top) -->
    <%-include('./partials/navBar')%>

    <!-- Header -->
    <%-include('./partials/header')%>

    <!-- Page content -->
    <div class="ps-content">

      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          
          <h1 class="ps-center"><%-prato.titulo%></h1>
          <br />
          <h4><%-prato.descricaoDetalhada%></h4>
            <p class="ps-text-grey">
              <br><br><br>
            <h3>U$S <%-prato.preco%></h3>
          </p>
        
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/<%- prato.img%>"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <!-- Footer -->
      <%-include('./partials/footer')%>
    </div>
  </body>
</html>
